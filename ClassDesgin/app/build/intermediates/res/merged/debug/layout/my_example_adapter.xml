                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:textSize="16dp"
                    android:text="cc"
                    android:gravity="center"
                    android:id="@+id/exam_textview2"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/exam_textview1" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:textSize="16dp"
                    android:text="cc"
                    android:gravity="center"
                    android:id="@+id/exam_textview3"
                    android:layout_alignParentTop="true"
